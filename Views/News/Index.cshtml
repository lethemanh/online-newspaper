@model IEnumerable<BaoDienTu_ASPNET.Models.News>
@{
    ViewData["Title"] = "Danh sách bài viết";
}
<h2>Tin mới nhất</h2>
@if (Model.Any())
{
    <div class="row">
        @foreach (var news in Model)
        {
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@news.Title</h5>
                        <p class="card-text">@news.Content.Substring(0, Math.Min(100, news.Content.Length))...</p>
                        <a href="@Url.Action("Details", "News", new { id = news.Id })" class="btn btn-primary">Xem chi tiết</a>
                        <a href="@Url.Action("Create", "News")" class="btn btn-primary mb-3">Đăng bài mới</a>
                        <span class="badge bg-secondary">@news.Category?.Name</span>
                        <span class="badge bg-info">Tác giả: @news.Author?.UserName</span>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Chưa có bài viết nào.</p>
}
